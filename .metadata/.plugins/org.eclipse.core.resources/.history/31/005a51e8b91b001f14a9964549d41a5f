package co.edu.uco.skilltrade.data.dao.factory;

import co.edu.uco.skilltrade.data.dao.CiudadDAO;
import co.edu.uco.skilltrade.data.dao.DepartamentoDAO;
import co.edu.uco.skilltrade.data.dao.CursoDAO;

public abstract class DAOFactory {

	protected abstract void obtenerConexion();

	public abstract void iniciarTransaccion();

	public abstract void confirmarTransaccion();

	public abstract void cancelarTransaccion();

	public abstract void cerrarConexion();

	public abstract CursoDAO getPaisDAO();

	public abstract DepartamentoDAO getDepartamentoDAO();

	public abstract CiudadDAO getCiudadDAO();

}